@using Microsoft.AspNetCore.Identity;
@using Imoveis.Models;
@using System.Security.Claims;

@inject IHttpContextAccessor _acessor;

@{
    var appUser = _acessor.HttpContext.User.Identity.Name;
    var appId = _acessor.HttpContext.User.FindFirst(ClaimTypes.Sid)?.Value;
}

<ul class="navbar-nav flex-grow-1">
    <li class="nav-item">
        <a class="nav-link text-white-50" asp-area="" asp-controller="Home" asp-action="Index"><i class="fa fa-house"></i>&nbsp;Início</a>
    </li>
    @if (_acessor.HttpContext.User.Identity.IsAuthenticated)
    {
        @if (_acessor.HttpContext.User.IsInRole("1"))
        {
            <li class="nav-item">
                <a class="nav-link text-white-50" asp-area="" asp-controller="Usuarios" asp-action="Index"><i class="fa fa-user"></i>&nbsp;Usuarios</a>
            </li>
        }
        <li class="nav-item">
            <a class="nav-link text-white-50" asp-area="" asp-controller="Imoveis" asp-action="Index"><i class="fa-solid fa-building"></i>&nbsp;Imoveis</a>
        </li>
    }
</ul>