@model Imoveis.Models.AgruparModels
@{
    ViewData["Title"] = "Visualizar";
    var controle_ativo = 2;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body>
    <h1>Visualizar</h1>
    <hr />
    <div class="row" id="linha">
        @*<div class="col-12">*@
        <legend>Imagens</legend>
        <div id="meuSlider" class="carousel slider col-6" data-bs-ride="carousel">
            <div class="carousel-inner">
                @foreach (var item in Model.oMdImagens)
                {
                    if (controle_ativo == 2)
                    {
                        <div class="carousel-item active">
                            <img class="rounded d-block w-100 h-50" src="@Url.Action("VisualizarVariasImg", "Home", new {id = item.Id, idImovel = @ViewBag.idImovel })">
                        </div>
                        controle_ativo = 1;
                    }
                    else
                    {
                        <div class="carousel-item">
                            <img class="rounded d-block w-100 h-50" src="@Url.Action("VisualizarVariasImg", "Home", new {id = item.Id, idImovel = @ViewBag.idImovel })">
                        </div>
                    }
                }
                <button class="carousel-control-prev" type="button" data-bs-target="#meuSlider" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon text-black" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#meuSlider" data-bs-slide="next">
                    <span class="carousel-control-next-icon text-black" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
        <div class="col-3">
            <p>
                @Html.DisplayFor(model => model.oMdImoveis.Nome)
            </p>
            <p>
                @Html.DisplayFor(model => model.oMdImoveis.Valor)
            </p>
        </div>
        <div class="col-3">
            <p class="col-sm-2">
                @Html.DisplayNameFor(model => model.oMdImoveis.Quarto)
            </p>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.oMdImoveis.Quarto)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.oMdImoveis.Vagas)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.oMdImoveis.Vagas)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.oMdImoveis.Tipo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.oMdImoveis.Tipo)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.oMdImoveis.Endereco.Rua)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.oMdImoveis.Endereco.Rua)
            </dd>
        </div>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.oMdImoveis.Endereco.Bairro)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.oMdImoveis.Endereco.Bairro)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.oMdImoveis.Endereco.Cidade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.oMdImoveis.Endereco.Cidade)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.oMdImoveis.Endereco.Estado)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.oMdImoveis.Endereco.Estado)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.oMdImoveis.Endereco.CEP)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.oMdImoveis.Endereco.CEP)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.oMdImoveis.Usuario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.oMdImoveis.Usuario.Email)
        </dd>
        @* </div>*@
    </div>
</body>
