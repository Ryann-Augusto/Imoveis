@model Imoveis.Models.AgruparModels
@{
    ViewData["Title"] = "Visualizar";
    var controle_ativo = 2;
    var numeracao = 1;
    var total = Model.oMdImagens.Count();
    Layout = "~/Views/Shared/_LayoutAdm.cshtml";
}
<body>
    <div class="row mt-2" id="linha">
        @*<div class="col-12">*@
        <div id="meuSlider" class="carousel slider col-xl-8 col-lg-8 col-md-8 col-sm-12" data-bs-ride="carousel">
            <div class="carousel-inner">
                @foreach (var item in Model.oMdImagens)
                {
                    if (controle_ativo == 2)
                    {
                        <div class="carousel-item active">
                            <img class="rounded d-block img-fluid img-thumbnail btnImage col-12" href="#" data-value="@item.ImovelId" style="height:500px; object-fit:cover; display:block;" src="@Url.Action("VisualizarVariasImg", "Home", new {id = item.Id, idImovel = @ViewBag.idImovel })">
                            <p class="center">@numeracao/@total</p>
                        </div>
                        controle_ativo = 1;

                    }
                    else
                    {
                        numeracao += 1;
                        <div class="carousel-item">
                            <img class="rounded d-block img-fluid img-thumbnail btnImage col-12" href="#" data-value="@item.ImovelId" style="height:500px; object-fit:cover; display:block;" src="@Url.Action("VisualizarVariasImg", "Home", new {id = item.Id, idImovel = @ViewBag.idImovel })">
                            <p class="center">@numeracao/@total</p>
                        </div>
                    }
                }
                <button class="carousel-control-prev" type="button" data-bs-target="#meuSlider" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon text-black" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#meuSlider" data-bs-slide="next">
                    <span class="carousel-control-next-icon text-black" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
        <div class="col-xl-4 col-lg-4 col-md-4 col-sm-12 mb-5 mt-1">
            <div class="col-12 h-100 rounded p-2" id="NomeValor">
                <p class="nomeImovel text-wrap text-center">@Html.DisplayFor(model => model.oMdImoveis.Nome)</p>

                <p class="valorImovel">@Html.DisplayFor(model => model.oMdImoveis.Valor)</p>

                <div class="group-append infoImovel inline">
                <i class="fa-solid fa-bed"></i>&nbsp;
                    @Html.DisplayFor(model => model.oMdImoveis.Quarto)
                </div>

                <div class="group-append infoImovel inline">
                <i class="fa-solid fa-warehouse"></i>&nbsp;
                    @Html.DisplayFor(model => model.oMdImoveis.Vagas)
                </div>

                <div class="group-append infoImovel inline">
                <i class="fa-solid fa-shower"></i>&nbsp;
                    @Html.DisplayFor(model => model.oMdImoveis.Banheiro)
                </div>

                <button class="btn btn-primary btn-lg center">Entrar em Contato</button>
            </div>
        </div>
        <hr />
        <div class="col-3">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.oMdImoveis.Tipo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.oMdImoveis.Tipo)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.oMdImoveis.Endereco.Rua)
            </dt>
            <dd class="col-sm-10">
                <i class="fa-solid fa-location-dot"></i>&nbsp;@Html.DisplayFor(model => model.oMdImoveis.Endereco.Rua)
            </dd>
        </div>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.oMdImoveis.Endereco.Bairro)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.oMdImoveis.Endereco.Bairro)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.oMdImoveis.Endereco.Cidade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.oMdImoveis.Endereco.Cidade)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.oMdImoveis.Endereco.Estado)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.oMdImoveis.Endereco.Estado)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.oMdImoveis.Endereco.CEP)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.oMdImoveis.Endereco.CEP)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.oMdImoveis.Usuario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.oMdImoveis.Usuario.Email)
        </dd>
        @* </div>*@
    </div>
</body>
<!-- INICIO DO POPUP VISUALIZAR-->
<!-- Modal -->
<div class="modal fade" id="myModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div id="conteudoModal"></div>
        </div>
    </div>
</div>