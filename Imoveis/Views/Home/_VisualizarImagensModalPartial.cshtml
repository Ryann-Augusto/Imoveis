@model IEnumerable<MdImagens>
@{
    ViewData["Title"] = "Visualizar";
    var controle_ativo = 2;
    var numeracao = 1;
    var total = Model.Count();
}
<div class="modal-body">
    <div class="row mt-2" id="linha">
        <div id="meuSlider" class="carousel slider col-xl-6 col-lg-6 col-md-6 col-sm-12" data-bs-ride="carousel">
            <div class="carousel-inner">
                @foreach (var item in Model)
                {
                    if (controle_ativo == 2)
                    {
                        <div class="carousel-item active">
                            <img class="rounded d-block img-fluid img-thumbnail" style="height:500px; object-fit:cover; display:block;" src="@Url.Action("VisualizarVariasImg", "Home", new {id = item.Id, idImovel = @ViewBag.idImovel })">
                            <p class="center">@numeracao/@total</p>
                        </div>
                        controle_ativo = 1;

                    }
                    else
                    {
                        numeracao += 1;
                        <div class="carousel-item">
                            <img class="rounded d-block img-fluid img-thumbnail" style="height:500px; object-fit:cover; display:block;" src="@Url.Action("VisualizarVariasImg", "Home", new {id = item.Id, idImovel = @ViewBag.idImovel })">
                            <p class="center">@numeracao/@total</p>
                        </div>
                    }
                }
                <button class="carousel-control-prev" type="button" data-bs-target="#meuSlider" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon text-black" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#meuSlider" data-bs-slide="next">
                    <span class="carousel-control-next-icon text-black" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
    </div>
</div>
