@model Imoveis.Models.MdUsuarios

@{
    ViewData["Title"] = "Create";
}

<body class="bodylightgray">



    @if (TempData["sucesso"] != null)
    {
        <div class="alert alert-success" id="notfyHome">@TempData["sucesso"] <span class="fa fa-check fa-2x"></span></div>
    }
    @if (TempData["erro"] != null)
    {
        <div class="alert alert-danger" id="notfyHome">@TempData["erro"] <span class="fa fa-times fa-2x"></span></div>
    }

    <h1>Criar Usuários</h1>

    <hr />
    <div class="row">
        <div class="col-12">
            <div class="card">
                <h5 class="card-header">Dados do Usuário</h5>
                <div class="card-body">
                    <form asp-action="Create">
                        <div class="row">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group col-sm-12 col-md-6 col-lg-6 col-xl-6">
                                <label asp-for="Nome" class="control-label"></label>
                                <input asp-for="Nome" class="form-control" />
                                <span asp-validation-for="Nome" class="text-danger"></span>
                            </div>
                            <div class="form-group col-sm-12 col-md-6 col-lg-6 col-xl-6">
                                <label asp-for="Email" class="control-label"></label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group col-sm-12 col-md-4 col-lg-4 col-xl-4 mt-2">
                                <label asp-for="Cpf_Cnpj" class="control-label"></label>
                                <input asp-for="Cpf_Cnpj" class="form-control" />
                                <span asp-validation-for="Cpf_Cnpj" class="text-danger"></span>
                            </div>
                            <div class="form-group col-sm-12 col-md-4 col-lg-4 col-xl-4 mt-2">
                                <label asp-for="Telefone" class="control-label"></label>
                                <input asp-for="Telefone" class="form-control" />
                                <span asp-validation-for="Telefone" class="text-danger"></span>
                            </div>
                            <div class="form-group col-sm-12 col-md-4 col-lg-4 col-xl-4 mt-2">
                                <label asp-for="Nivel" class="control-label"></label>
                                <select asp-for="Nivel" class="form-control">
                                    <option value="1">Administrador</option>
                                    <option value="2">Funcionario</option>
                                </select>
                                <span asp-validation-for="Nivel" class="text-danger"></span>
                            </div>
                            <div class="form-group col-sm-12 col-md-6 col-lg-6 col-xl-6 mt-2">
                                <label asp-for="Senha" class="control-label"></label>
                                <input asp-for="Senha" class="form-control" />
                                <span asp-validation-for="Senha" class="text-danger"></span>
                            </div>
                            <div class="form-group col-sm-12 col-md-6 col-lg-6 col-xl-6 mt-2">
                                <label asp-for="ConfirmSenha" class="control-label"></label>
                                <input asp-for="ConfirmSenha" class="form-control" />
                                <span asp-validation-for="ConfirmSenha" class="text-danger"></span>
                            </div>
                            <div class="form-group mt-3">
                                <div class="row">
                                    <div class="col-6">
                                        <a asp-action="Index" class="btn btn-secondary center col-12">Voltar</a>
                                    </div>
                                    <div class="col-6">
                                        <input type="submit" value="Salvar" class="btn btn-primary center col-12" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
