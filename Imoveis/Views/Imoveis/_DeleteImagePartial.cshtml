@model Imoveis.Models.MdImagens

@{
    ViewData["Title"] = "Apagar Imagem";
}
<div class="modal-header">
    <h5 class="modal-title">Deseja realmente apagar esta imagem ?</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>


<div class="modal-body center">
    @*<hr /> LINHA HORIZONTAL*@
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dd>
             <img src="@Url.Action("VisualizarVariasImg", "Imoveis", new {id = Model.Id, idImovel = Model.ImovelId })" style="width:480px; height:270px;">
        </dd>
    </dl>
</div>
<div class="modal-footer">
    <form asp-action="DeleteImage">
        <input type="hidden" asp-for="Id" />
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>


